<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/vertical_linear_layout"
    android:background="@android:color/transparent"
    tools:context=".ResetPasswordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarResetPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="@dimen/default_margin"
        app:title="@string/reset_password"

        style="@style/bold_title_text_style"
        app:titleTextColor="?attr/colorOnSecondary"

        android:layout_gravity="start"
        app:navigationIcon="@drawable/back"

        app:iconPadding="4dp"
        app:buttonGravity="center_vertical" />

    <EditText
        android:id="@+id/oldPasswordEditText"
        style="@style/edit_text_style"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/old_password"
        android:drawableStart="@drawable/lock_16"
        android:drawablePadding="8dp"
        android:paddingHorizontal="12dp"
        app:endIconDrawable="@drawable/check_16"
        app:endIconMode="custom"
        app:endIconTint="@color/black"/>

    <EditText
        android:id="@+id/newPasswordEditText"
        style="@style/edit_text_style"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginBottom="32dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/new_password"
        android:drawableStart="@drawable/lock_16"
        android:drawablePadding="8dp"
        android:paddingHorizontal="12dp"
        app:endIconDrawable="@drawable/check_16"
        app:endIconMode="custom"
        app:endIconTint="@color/black"/>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputContainer"
        style="@style/material_edit_text_style"

        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginVertical="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password"

            android:drawableStart="@drawable/lock_16"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSecondary"
            android:textAppearance="@style/hint_text_style"
            android:textColorHint="?attr/colorOnTertiary"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:paddingBottom="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputContainer2"
        style="@style/material_edit_text_style"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginVertical="8dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/light_grey"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:startIconDrawable="@drawable/lock_16"
        app:startIconTint="?attr/colorOnTertiary"
        app:boxCollapsedPaddingTop="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnTertiary"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingVertical="12dp"
            android:background="@null" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputContainer3"
        style="@style/password_edit_text_style"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginVertical="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchBar3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password"

            android:drawableStart="@drawable/lock_16"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSecondary"
            android:textAppearance="@style/hint_text_style"
            android:textColorHint="?attr/colorOnTertiary"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:paddingBottom="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgotPassword"
        android:text="@string/forgot_password"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        style="@style/subtitle_text_style"
        android:textSize="@dimen/text_12"
        android:textColor="@color/main_color"/>

    <Button
        android:id="@+id/resetPasswordButton"
        style="@style/button_style"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:text="@string/reset_password"
        android:layout_marginBottom="24dp"
        android:enabled="false"
        android:backgroundTint="@drawable/button_selector"/>




</LinearLayout>