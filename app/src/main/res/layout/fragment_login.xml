<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/combined_background"
    tools:context=".LoginFragment">

    <LinearLayout
        android:id="@+id/mainContent"
        style="@style/vertical_linear_layout_with_padding"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:visibility="visible"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signupContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">

        <TextView
            android:text="@string/welcome"
            style="@style/bold_title_text_style"
            android:textSize="28dp"/>

        <TextView
            android:text="@string/sign_in_to_continue"
            style="@style/small_text_style"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/mailEditText"
            style="@style/edit_text_style"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/email"
            android:drawableStart="@drawable/email_16"
            android:drawablePadding="8dp"
            android:paddingHorizontal="12dp"
            app:endIconDrawable="@drawable/check_16"
            app:endIconMode="custom"
            app:endIconTint="@color/black" />

        <EditText
            android:id="@+id/passwordEditText"
            style="@style/edit_text_style"
            android:layout_marginBottom="@dimen/default_margin"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="@string/password"
            android:drawableStart="@drawable/lock_16"
            android:drawablePadding="8dp"
            android:paddingHorizontal="12dp"
            app:endIconDrawable="@drawable/check_16"
            app:endIconMode="custom"
            app:endIconTint="@color/black"/>

        <TextView
            android:id="@+id/forgotPassword"
            android:text="@string/forgot_password"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/default_margin"
            style="@style/subtitle_text_style"
            android:textSize="@dimen/text_12"
            android:textColor="@color/main_color"/>

        <Button
            android:id="@+id/signInButton"
            style="@style/button_style"
            android:text="@string/sign_in_title"
            android:layout_marginBottom="24dp"
            android:enabled="false"
            android:backgroundTint="@drawable/button_selector"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:buttonTint="@color/main_color"
            android:backgroundTint="@color/main_color"
            android:text="@string/remember_me"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/text_10"
            android:layout_marginBottom="35dp"/>

        <TextView
            android:text="@string/or_login_with"
            style="@style/subtitle_text_style"
            android:textSize="@dimen/small_text_size"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/microsoftLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_microsoft"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:id="@+id/googleLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_google"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signupContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">

        <TextView
            android:text="@string/dont_have_an_account"
            style="@style/small_text_style"
            android:textSize="@dimen/text_10"
            android:layout_marginEnd="2dp"/>

        <TextView
            android:id="@+id/signUpButton"
            android:text="@string/sign_up"
            style="@style/small_text_style"
            android:textSize="@dimen/text_10"
            android:textColor="@color/main_color"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

