<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Layout -->
    <style name="vertical_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/background</item>

    </style>
    <!-- Layout -->
    <style name="vertical_linear_layout_with_padding" parent="vertical_linear_layout">
        <item name="android:paddingHorizontal">@dimen/default_margin</item>
    </style>
    <!-- TEXT -->
    <style name="base_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="bold_title_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="semi_bold_title_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="subtitle_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="small_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="hint_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="description_text_style" parent="base_text_style">
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <!-- Button -->
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/poppins_semi_bold</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>
    <!-- EditText -->
    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorHint">?attr/colorOnTertiary</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="material_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="cursorColor">@color/main_color</item>
        <item name="hintEnabled">false</item>
    </style>
    <!-- PasswordEditText -->
    <style name="password_edit_text_style" parent="material_edit_text_style">
        <item name="endIconDrawable">@drawable/eye</item>
        <item name="endIconTint">@color/password_toggle_color</item>
        <item name="endIconMode">password_toggle</item>
    </style>
</resources>